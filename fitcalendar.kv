#:import utils kivy.utils
<FitLayout>
    MDScreen:
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_size: True
            md_bg_color: app.theme_cls.primary_color

            MDRaisedButton:
                text: "Rozpocznij"

            MDRaisedButton:
                text: "r"

            MDRaisedButton:
                text: "q"

    MDBottomNavigation:
        #panel_color: "#eeeaea"
        selected_color_background: "orange"
        text_color_active: "lightgrey"

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Mail'
            icon: 'gmail'
            badge_icon: "numeric-10"

            MDLabel:
                text: 'Mail'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Twitter'
            icon: 'twitter'
            badge_icon: "numeric-5"

            MDLabel:
                text: 'Twitter'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'LinkedIN'
            icon: 'linkedin'

            MDLabel:
                text: 'LinkedIN'
                halign: 'center'